#!/bin/bash
#Stop lightdm on boot
echo  "manual" > /etc/init/lightdm.override
if [ $(grep -c chvt /etc/rc.local) = 0 ]
then
	sed -i '/exit 0/i chvt 2' /etc/rc.local
fi

