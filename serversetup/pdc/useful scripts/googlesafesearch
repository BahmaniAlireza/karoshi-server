#!/bin/bash
#Force google to use safesearch - this will create google dns zones and redirect to forcesafesearch.google.com

#User action - add / delete
ACTION=$(tr -cd "a-z" <<< "$1")

#Get the ip address for forcesafesearch.google.com
GOOGLESAFEIP=$(tr -cd "0-9." <<< "$2")
[[ -z "$GOOGLESAFEIP" ]] && GOOGLESAFEIP=216.239.38.120

if [[ ! "$ACTION" == "add" ]] && [[ ! "$ACTION" == "delete" ]]
then
	echo -e "\nUsage: googlesafesearch add,delete googlesafeip(optional)\n\nadd - add google dns zones to force googlesafesearch.\ndelete - delete any google dns zones that have been added by this script.\n\ngooglesafeip - this is the tcpip address for forcesafesearch.google.com.\n"
fi

#List of google zones to add to samba4 dns
GOOGLEZONES="google.ac google.ad google.ae google.com google.com.af google.com.ag google.com.ai google.al google.am google.co.ao google.com.ar google.as google.at google.com.au google.az google.ba google.com.bd google.be google.bf google.bg google.com.bh google.bi google.bj google.com.bn google.com.bo google.com.br google.bs google.bt google.co.bw google.by google.com.bz google.ca google.com.kh google.cc google.cd google.cf google.cat google.cg google.ch google.ci google.co.ck google.cl google.cm google.cn google.com.co google.co.cr google.hr google.com.cu google.cv google.com.cy google.cz google.de google.dj google.dk google.dm google.com.do google.dz google.com.ec google.ee google.com.eg google.es google.com.et google.fi google.com.fj google.fm google.fr google.ga google.ge google.gf google.gg google.com.gh google.com.gi google.gl google.gm google.gp google.gr google.com.gt google.gy google.com.hk google.hn google.ht google.hu google.co.id google.ir google.iq google.ie google.co.il google.im google.co.in google.io google.is google.it google.je google.com.jm google.jo google.co.jp google.co.ke google.ki google.kg google.co.kr google.com.kw google.kz google.la google.com.lb google.com.lc google.li google.lk google.co.ls google.lt google.lu google.lv google.com.ly google.co.ma google.md google.me google.mg google.mk google.ml google.com.mm google.mn google.ms google.com.mt google.mu google.mv google.mw google.com.mx google.com.my google.co.mz google.com.na google.ne google.com.nf google.com.ng google.com.ni google.nl google.no google.com.np google.nr google.nu google.co.nz google.com.om google.com.pa google.com.pe google.com.ph google.com.pk google.pl google.com.pg google.pn google.com.pr google.ps google.pt google.com.py google.com.qa google.ro google.rs google.ru google.rw google.com.sa google.com.sb google.sc google.se google.com.sg google.sh google.si google.sk google.com.sl google.sn google.sm google.so google.st google.com.sv google.td google.tg google.co.th google.com.tj google.tk google.tl google.tm google.to google.tn google.com.tn google.com.tr google.tt google.com.tw google.co.tz google.com.ua google.co.ug google.co.uk google.us google.com.uy google.co.uz google.com.vc google.co.ve google.vg google.co.vi google.com.vn google.vu google.ws google.co.za google.co.zm google.co.zw i.ytimg.com"

GOOGLEZONES="google.co.uk google.com"

LDAPPASS=$(sed -n 1,1p /etc/ldap.secret)
RESTARTSAMBA=no
GOOGLEINFO=$(samba-tool dns zonelist 127.0.0.1 --username=Administrator --password="$LDAPPASS" | grep google)

for GOOGLEZONE in $GOOGLEZONES
do
	if [[ "$ACTION" == add ]]
	then
		#Create dns zones
		if [[ $(grep -c -w "$GOOGLEZONE" <<< "$GOOGLEINFO") = 0 ]]
		then
			RESTARTSAMBA=yes
			echo Creating "$GOOGLEZONE"
			samba-tool dns zonecreate 127.0.0.1 "$GOOGLEZONE" --username=Administrator --password="$LDAPPASS"
			#Add in a cname entry to forcesafesearch.google.com
			samba-tool dns add 127.0.0.1 "$GOOGLEZONE" www."$GOOGLEZONE" CNAME forcesafesearch.google.com --username=Administrator --password="$LDAPPASS" 1>/dev/null
		fi
	fi

	if [[ "$ACTION" == delete ]]
	then
		#Remove dns zone if it exists
		if [[ $(grep -c -w "$GOOGLEZONE" <<< "$GOOGLEINFO") -gt 0 ]]
		then
			RESTARTSAMBA=yes
			echo Deleting "$GOOGLEZONE"
			samba-tool dns zonedelete 127.0.0.1 "$GOOGLEZONE" --username=Administrator --password="$LDAPPASS"
		fi
	fi
done

if [[ "$ACTION" == add ]]
then
	#Add in an A record for forcesafesearch.google.com	
	samba-tool dns add 127.0.0.1 google.com forcesafesearch.google.com A "$GOOGLESAFEIP" --username=Administrator --password="$LDAPPASS" 1>/dev/null
fi

#Restart samba4 to activate any zones that have been added or deleted - not needed with bind.
if [[ "$RESTARTSAMBA" == yes ]] && [[ $(grep -c "server services = -dns" /etc/samba/smb.conf) == 0 ]]
then
	service samba4 stop
	service samba4 start
fi
exit
