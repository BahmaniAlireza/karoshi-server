	TOTAL7=`grep -h -R ASSETTYPE=\"7\" /opt/karoshi/asset_register/locations/* | wc -l`
	TOTAL8=`grep -h -R ASSETTYPE=\"8\" /opt/karoshi/asset_register/locations/* | wc -l`
