		ARRAYCOUNT=0
		ARRAYMAX=${#LOCATIONARRAY[@]}
		while [ $ARRAYCOUNT -lt $ARRAYMAX ]
		do
			if [ $(echo $(( $LOCCOUNTER + 1 ))) -gt "$ROWCOUNT" ]
