#(at your option) any later version.
#
#Karoshi Server is distributed in the hope that it will be useful,
#but WITHOUT ANY WARRANTY; without even the implied warranty of
#MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#GNU Affero General Public License for more details.
#
#You should have received a copy of the GNU Affero General Public License
#along with Karoshi Server.  If not, see <http://www.gnu.org/licenses/>.

#
#The Karoshi Team can be contacted at: 
#mpsharrad@karoshi.org.uk
#jharris@karoshi.org.uk
#aball@karoshi.org.uk
#
#Website: http://www.karoshi.org.uk
LOG_DATE=`date +%F`
[ $LOG_DATE'null' = null ] && exit

SSHWARNMSG="SSH is not enabled for this server."
UPGRADEMSG="Showing available updates:"
UPDATEMSG="Updating repository:"
SITEMSG="Web Site"
FILTERGROUPMSG="Filtered for"
DELETEMSG="Delete"
########################
#Check md5checksum
########################
if ! test -f /opt/karoshi/web_controls/checksums/admin_checksums/dg_view_allowed_sites_cgi
then
echo `date`: dg_view_allowed_sites - No admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/admin_checksums/dg_view_allowed_sites_cgi
MD5SUM=`md5sum /var/www/cgi-bin_karoshi/admin/dg_view_allowed_sites.cgi | cut -d' ' -f1`
[ $MD5SUM'null' = null ] && MD5SUM=not_set
if [ $MD5SUM'check' != $dg_view_allowed_sites_cgi'check' ]
then
echo `date`: dg_view_allowed_sites - Incorrect admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if ! test -f /opt/karoshi/web_controls/checksums/tech_checksums/dg_view_allowed_sites_cgi
then
echo `date`: dg_view_allowed_sites - No tech MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/tech_checksums/dg_view_allowed_sites_cgi
MD5SUM2=`md5sum /var/www/cgi-bin_karoshi/tech/dg_view_allowed_sites.cgi | cut -d' ' -f1`
[ $MD5SUM2'null' = null ] && MD5SUM2=not_set
if [ $MD5SUM2'check' != $dg_view_allowed_sites_cgi'check' ]
then
echo `date`: dg_view_allowed_sites - Incorrect tech MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

########################
#Get variables
########################
numArgs=$#
if [ $numArgs != 1 ]
then
echo `date`: dg_view_allowed_sites - incorrect number of arguments >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
REMOTE_USER=`echo $* | cut -s -d: -f1`
REMOTE_ADDR=`echo $* | cut -s -d: -f2`
REMOTE_MD5=`echo $* | cut -s -d: -f3`
ALPHABET=`echo $* | cut -s -d: -f4`
GROUP=`echo $* | cut -s -d: -f5`
ALPHABET2=`echo $ALPHABET | tr 'A-Z' 'a-z'`
########################
#Check data
########################
if [ $REMOTE_MD5'check' != $MD5SUM'check' ] && [ $REMOTE_MD5'check' != $MD5SUM2'check' ]
then
echo `date`: dg_view_allowed_sites - Not called by dg_view_allowed_sites.cgi >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_USER'null' = null ]
then
echo `date`: dg_view_allowed_sites - Blank remote user >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_ADDR'null' = null ]
then
echo `date`: dg_view_allowed_sites - Blank remote tcpip address >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_admin` != 1 ] && [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_tech` != 1 ]
then
echo `date`: dg_view_allowed_sites - access denied to $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if [ $ALPHABET'null' = null ]
then
echo `date`: dg_view_allowed_sites - No letter chosen by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if [ $GROUP'null' = null ]
then
echo `date`: dg_view_allowed_sites - No group chosen by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

echo `date`: dg_view_allowed_sites - viewing allowed sites "for" the letter $ALPHABET by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE

if [ $GROUP = staff ]
then
FILTERPATH=/etc/dansguardian/staff_rules/exceptionsitelist_staff
else
FILTERPATH=/etc/dansguardian/student_rules/exceptionsitelist_students
fi

#Get squid server name
[ ! -f /opt/karoshi/server_network/proxyserver ] && exit 101
PROXYSERVER=`sed -n 1,1p /opt/karoshi/server_network/proxyserver`

if [ $PROXYSERVER != `hostname-fqdn` ]
then
ssh -x -o PasswordAuthentication=no $PROXYSERVER '
[ -d /opt/karoshi/.tempdata ] || mkdir /opt/karoshi/.tempdata
chmod 0700 /opt/karoshi/.tempdata
if [ '$ALPHABET' = ALL ]
then
cat '$FILTERPATH' > /opt/karoshi/.tempdata/exceptionsitelist.$$
else
grep ^'$ALPHABET' '$FILTERPATH' > /opt/karoshi/.tempdata/exceptionsitelist.$$
if [ '$ALPHABET' != '$ALPHABET2' ]
then
grep ^'$ALPHABET2' '$FILTERPATH' >> /opt/karoshi/.tempdata/exceptionsitelist.$$
fi
fi
SITECOUNT=`cat /opt/karoshi/.tempdata/exceptionsitelist.$$ | wc -l`
COUNTER=1
if [ $SITECOUNT -gt 0 ]
then
#Show table of sites
echo "<"table class=\"standard\" style=\"text-align: left";" width: 800px";" \" border=\"0\" cellpadding=\"2\" cellspacing=\"2\"">"
echo "<tbody>"
echo "<tr><td" style=\"width: 250px";"\""><b>"'$SITEMSG'"</b></td><td><b>"'$DELETEMSG'"</b></td></tr>"
while [ $COUNTER -le $SITECOUNT ]
do
SITEDATA=`sed -n $COUNTER,$COUNTER"p" /opt/karoshi/.tempdata/exceptionsitelist.$$`
SITENAME=`echo $SITEDATA | cut -d, -f1`
echo "<tr><td>"$SITENAME"</td><td>""<"input name="_SITENAME_" value="$SITENAME" type="checkbox""></td></tr>"
let COUNTER=$COUNTER+1
done
echo "</tbody>"
echo "</table>"
rm -f /opt/karoshi/.tempdata/exceptionsitelist.$$
else
rm -f /opt/karoshi/.tempdata/exceptionsitelist.$$
exit 101
fi
'
else
[ -d /opt/karoshi/.tempdata ] || mkdir /opt/karoshi/.tempdata
chmod 0700 /opt/karoshi/.tempdata
if [ $ALPHABET = ALL ]
then
cat $FILTERPATH > /opt/karoshi/.tempdata/exceptionsitelist.$$
else
grep ^$ALPHABET $FILTERPATH > /opt/karoshi/.tempdata/exceptionsitelist.$$
if [ $ALPHABET != $ALPHABET2 ]
then
grep ^$ALPHABET2 $FILTERPATH >> /opt/karoshi/.tempdata/exceptionsitelist.$$
fi
fi
SITECOUNT=`cat /opt/karoshi/.tempdata/exceptionsitelist.$$ | wc -l`
COUNTER=1
if [ $SITECOUNT -gt 0 ]
then
#Show table of sites
echo "<table class="standard" style="text-align: left';' width: 800px';' height: 100px';'" border="0" cellpadding="2" cellspacing="2">"
echo "<tbody>"
echo "<tr><td" style='"width: 250px;"'"><b>"$SITEMSG"</b></td><td><b>"$DELETEMSG"</b></td></tr>"
while [ $COUNTER -le $SITECOUNT ]
do
SITEDATA=`sed -n $COUNTER,$COUNTER"p" /opt/karoshi/.tempdata/exceptionsitelist.$$`
SITENAME=`echo $SITEDATA | cut -d, -f1`
echo "<tr><td>"$SITENAME"</td><td>""<"input name='"'_SITENAME_'"' value='"'$SITENAME'"' type='"'checkbox'"'"></td></tr>"
let COUNTER=$COUNTER+1
done
echo "</tbody>"
echo "</table>"
rm -f /opt/karoshi/.tempdata/exceptionsitelist.$$
else
rm -f /opt/karoshi/.tempdata/exceptionsitelist.$$
exit 101
fi
fi
exit
