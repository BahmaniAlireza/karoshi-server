#Karoshi Server is distributed in the hope that it will be useful,
#but WITHOUT ANY WARRANTY; without even the implied warranty of
#MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#GNU Affero General Public License for more details.
#
#You should have received a copy of the GNU Affero General Public License
#along with Karoshi Server.  If not, see <http://www.gnu.org/licenses/>.

#
#The Karoshi Team can be contacted at: 
#mpsharrad@karoshi.org.uk
#jharris@karoshi.org.uk
#aball@karoshi.org.uk
#
#Website: http://www.karoshi.org.uk
LOG_DATE=`date +%F`
[ $LOG_DATE'null' = null ] && exit

########################
#Check md5checksum
########################
if ! test -f /opt/karoshi/web_controls/checksums/admin_checksums/dg_view_part_banned_sites2_cgi
then
echo `date`: dg_view_part_banned_sites2 - No admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/admin_checksums/dg_view_part_banned_sites2_cgi
MD5SUM=`md5sum /var/www/cgi-bin_karoshi/admin/dg_view_part_banned_sites2.cgi | cut -d' ' -f1`
[ $MD5SUM'null' = null ] && MD5SUM=not_set
if [ $MD5SUM'check' != $dg_view_part_banned_sites2_cgi'check' ]
then
echo `date`: dg_view_part_banned_sites2 - Incorrect admin MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if ! test -f /opt/karoshi/web_controls/checksums/tech_checksums/dg_view_part_banned_sites2_cgi
then
echo `date`: dg_view_part_banned_sites2 - No tech MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
source /opt/karoshi/web_controls/checksums/tech_checksums/dg_view_part_banned_sites2_cgi
MD5SUM2=`md5sum /var/www/cgi-bin_karoshi/tech/dg_view_part_banned_sites2.cgi | cut -d' ' -f1`
[ $MD5SUM2'null' = null ] && MD5SUM2=not_set
if [ $MD5SUM2'check' != $dg_view_part_banned_sites2_cgi'check' ]
then
echo `date`: dg_view_part_banned_sites2 - Incorrect tech MD5Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

########################
#Get variables
########################
numArgs=$#
if [ $numArgs != 1 ]
then
echo `date`: dg_view_part_banned_sites2 - incorrect number of arguments >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
REMOTE_USER=`echo $* | cut -s -d: -f1`
REMOTE_ADDR=`echo $* | cut -s -d: -f2`
REMOTE_MD5=`echo $* | cut -s -d: -f3`
GROUP=`echo $* | cut -s -d: -f4`
SITEARRAY=( `echo $* | cut -s -d: -f5- | sed 's/:/ /g'` )
########################
#Check data
########################
if [ $REMOTE_MD5'check' != $MD5SUM'check' ] && [ $REMOTE_MD5'check' != $MD5SUM2'check' ]
then
echo `date`: dg_view_part_banned_sites2 - Not called by dg_view_part_banned_sites2.cgi >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_USER'null' = null ]
then
echo `date`: dg_view_part_banned_sites2 - Blank remote user >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
if [ $REMOTE_ADDR'null' = null ]
then
echo `date`: dg_view_part_banned_sites2 - Blank remote tcpip address >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_admin` != 1 ] && [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_tech` != 1 ]
then
echo `date`: dg_view_part_banned_sites2 - access denied to $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if [ $GROUP'null' = null ]
then
echo `date`: dg_view_part_banned_sites2 - Blank group by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

if [ $SITEARRAY'null' = null ]
then
echo `date`: dg_view_part_banned_sites2 - No sites chosen by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi

SITECOUNT=`echo ${#SITEARRAY[@]}`
COUNTER=0
#Log event
while [ $COUNTER -lt $SITECOUNT ]
do
SITE=`echo ${SITEARRAY[$COUNTER]} | sed "s/2F/\//g"`
echo `date`: dg_view_part_banned_sites2 - deleting $SITE by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
let COUNTER=$COUNTER+1
done

if [ $GROUP = staff ]
then
FILTERPATH=/etc/dansguardian/staff_rules/bannedurllist_staff
else
FILTERPATH=/etc/dansguardian/student_rules/bannedurllist_students
fi

#Get squid server name
[ ! -f /opt/karoshi/server_network/proxyserver ] && exit 101
PROXYSERVER=`sed -n 1,1p /opt/karoshi/server_network/proxyserver`

if [ $PROXYSERVER != `hostname-fqdn` ]
then
ssh -x -o PasswordAuthentication=no $PROXYSERVER '
SITEARRAY=( `echo '${SITEARRAY[@]:0}'` )
touch /etc/dansguardian/staff_rules/bannedurllist_staff
touch /etc/dansguardian/student_rules/bannedurllist_students
COUNTER=0
while [ $COUNTER -lt '$SITECOUNT' ]
do
#Delete site
SITE=`echo ${SITEARRAY[$COUNTER]} | sed "s/2F/\//g"`
#Get line number of site
SITELINENUMBER=`grep -n ^$SITE '$FILTERPATH' | cut -d: -f1`
if [ $SITELINENUMBER"null" != null ]
then
sed -i $SITELINENUMBER"d" '$FILTERPATH'
fi
let COUNTER=$COUNTER+1
done
#Remove blank lines
sed -i "/^$/d" '$FILTERPATH'
#Make sure that list is not empty
SITECOUNT=`cat '$FILTERPATH' | wc -l`
if [ $SITECOUNT = 0 ]
then
echo members.home.net/uporn > '$FILTERPATH'
fi
'
else
touch /etc/dansguardian/staff_rules/bannedurllist_staff
touch /etc/dansguardian/student_rules/bannedurllist_students
COUNTER=0
while [ $COUNTER -lt $SITECOUNT ]
do
#Delete site
SITE=`echo ${SITEARRAY[$COUNTER]} | sed "s/2F/\//g"`
#Get line number of site
SITELINENUMBER=`grep -n ^$SITE $FILTERPATH | cut -d: -f1`
if [ $SITELINENUMBER"null" != null ]
then
sed -i $SITELINENUMBER"d" $FILTERPATH
fi
let COUNTER=$COUNTER+1
done
#Remove blank lines
sed -i '/^$/d' $FILTERPATH
#Make sure that list is not empty
SITECOUNT=`cat $FILTERPATH | wc -l`
if [ $SITECOUNT = 0 ]
then
echo members.home.net/uporn > $FILTERPATH
fi
fi
exit
