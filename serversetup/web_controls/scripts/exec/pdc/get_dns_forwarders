LOG_DATE=`date +%F`
[ -z "$LOG_DATE" ] && exit

SERVER=$(echo $1 | tr -cd 'A-Za-z0-9\._-')

if [ $SERVER = $(hostname-fqdn) ]
then
	DNSFORWARDERS=$(grep "dns forwarder" /etc/samba/smb.conf | grep -v "#" | tr -cd "0-9.") 2>> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
else
	DNSFORWARDERS=$(ssh -o PasswordAuthentication=no -o ConnectTimeout=3 $SERVER '
	PDC_STATUS=no
	if [ -f /etc/samba/smb.conf ]
	then
		if [ $(grep -c "dns forwarder" /etc/samba/smb.conf) -gt 0 ]
		then
			PDC_STATUS=yes
			grep "dns forwarder" /etc/samba/smb.conf | grep -v "#" | tr -cd "0-9."
		fi
	fi
	if [ "$PDC_STATUS" = no ]
	then
		if [ -e /etc/resolv.karoshi.conf ]
		then
			grep "nameserver" /etc/resolv.karoshi.conf  | tr -cd "0-9.\n"
		else
			grep "nameserver" /etc/resolv.conf  | grep -v "#" | tr -cd "0-9.\n"
		fi
	fi
	') 2>> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
fi
echo -e "$DNSFORWARDERS"
