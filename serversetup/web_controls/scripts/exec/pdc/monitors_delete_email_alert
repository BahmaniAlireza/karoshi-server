#The Karoshi Team can be contacted at: 
#mpsharrad@karoshi.org.uk
#jsharrad@karoshi.org.uk

#
#Website: http://www.karoshi.org.uk
LOG_DATE=`date +%F`
########################
#Check md5checksum
########################
if ! test -f /opt/karoshi/web_controls/checksums/admin_checksums/monitors_delete_email_alert_cgi
then
	echo `date`: monitors_delete_email_alert - No admin Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi
source /opt/karoshi/web_controls/checksums/admin_checksums/monitors_delete_email_alert_cgi
Checksum=`sha256sum /var/www/cgi-bin_karoshi/admin/monitors_delete_email_alert.cgi | cut -d' ' -f1`
[ -z "$Checksum" ] && Checksum=not_set
if [ $Checksum'check' != $monitors_delete_email_alert_cgi'check' ]
then
	echo `date`: monitors_delete_email_alert - Incorrect admin Checksum >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi

########################
#Get variables
########################
numArgs=$#
if [ $numArgs != 0 ]
then
	echo `date`: monitors_delete_email_alert - incorrect number of arguments >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi

read DATA
DATA=`echo $DATA | tr -cd 'A-Za-z0-9\.%_:\-'`
if [ -z "$DATA" ]
then
	echo `date`: monitors_delete_email_alert - no data >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi
REMOTE_USER=`echo "$DATA" | cut -s -d: -f1`
REMOTE_ADDR=`echo "$DATA" | cut -s -d: -f2`
RemoteCheckSum=`echo "$DATA" | cut -s -d: -f3`
NAME=`echo "$DATA" | cut -s -d: -f4`
########################
#Check data
########################
if [ $RemoteCheckSum'check' != $Checksum'check' ]
then
	echo `date`: monitors_delete_email_alert - Not called by monitors_delete_email_alert.cgi >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi
if [ -z "$REMOTE_USER" ]
then
	echo `date`: monitors_delete_email_alert - Blank remote user >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi
if [ -z "$REMOTE_ADDR" ]
then
	echo `date`: monitors_delete_email_alert - Blank remote tcpip address >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi
if [ -z "$NAME" ]
then
	echo `date`: monitors_delete_email_alert - Blank name by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi
if [ `grep -c ^$REMOTE_USER: /opt/karoshi/web_controls/web_access_admin` != 1 ]
then
	echo `date`: monitors_delete_email_alert - access denied to $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
	exit 101
fi

echo `date`: monitors_delete_email_alert - deleting "$NAME" by $REMOTE_USER from $REMOTE_ADDR >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE

##########################
#Delete information
##########################
[ ! -d /opt/karoshi/server_network/mon/email_alerts ] && mkdir -p /opt/karoshi/server_network/mon/email_alerts
chmod -R 0640 /opt/karoshi/server_network/mon/email_alerts
chmod -R u+X,g+X /opt/karoshi/server_network/mon/email_alerts
chown -R root.apache_karoshi /opt/karoshi/server_network/mon/email_alerts

[ -f /opt/karoshi/server_network/mon/email_alerts/"$NAME" ] && rm -f /opt/karoshi/server_network/mon/email_alerts/"$NAME"
[ -f /opt/karoshi/server_network/mon/email_alerts_disabled/"$NAME" ] && rm -f /opt/karoshi/server_network/mon/email_alerts_disabled/"$NAME"


##########################
#Copy information to Monitoring Server
##########################
MONITORING_SERVER=`sed -n 1,1p /opt/karoshi/server_network/monitoringserver`

if [ $MONITORING_SERVER != `hostname-fqdn` ]
then
	ssh -x -o PasswordAuthentication=no $MONITORING_SERVER '
	[ -d /opt/karoshi/server_network/mon/email_alerts/ ] && rm -f -R /opt/karoshi/server_network/mon/email_alerts/
	'

	scp -r -o PasswordAuthentication=no -o ConnectTimeout=3 /opt/karoshi/server_network/mon/email_alerts root@$MONITORING_SERVER:/opt/karoshi/server_network/mon/

	ssh -x -o PasswordAuthentication=no -o ConnectTimeout=3 $MONITORING_SERVER '
	chmod 0755 /opt/karoshi/server_network/mon
	chown -R mon /opt/karoshi/server_network/mon/email_alerts/
'
fi

