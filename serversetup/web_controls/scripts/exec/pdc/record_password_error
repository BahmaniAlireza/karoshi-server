LOG_DATE=`date +%F`
[ $LOG_DATE'null' = null ] && exit

########################
#Get variables
########################
numArgs=$#
if [ $numArgs != 1 ]
then
echo `date`: record_password_error - incorrect number of arguments >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit 101
fi
REMOTE_USER=`echo $* | tr -cd 'A-Za-z0-9\._:%/+-' | cut -s -d: -f1`
REMOTE_ADDR=`echo $* | tr -cd 'A-Za-z0-9\._:%/+-' | cut -s -d: -f2`
MYUSERNAME=`echo $* | tr -cd 'A-Za-z0-9\._:%/+-' | cut -s -d: -f3`
########################
#Record Password error
########################
echo `date`: "record_password_error - Incorrect password for $MYUSERNAME from $REMOTE_ADDR" >> /opt/karoshi/logs/karoshi_web_management/$LOG_DATE
exit
