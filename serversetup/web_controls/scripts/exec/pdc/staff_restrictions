#You should have received a copy of the GNU Affero General Public License
#along with Karoshi Server.  If not, see <http://www.gnu.org/licenses/>.

#
#The Karoshi Team can be contacted at: 
#mpsharrad@karoshi.org.uk
#jsharrad@karoshi.org.uk

#
#Website: http://www.karoshi.org.uk
LOG_DATE=$(date +%F)
[ -z "$LOG_DATE" ] && exit
########################
#Check md5checksum
########################
if ! test -f /opt/karoshi/web_controls/checksums/admin_checksums/staff_restrictions2_cgi
then
	echo "$(date): staff_restrictions - No Checksum" >> "/opt/karoshi/logs/karoshi_web_management/$LOG_DATE"
	exit 101
fi
source /opt/karoshi/web_controls/checksums/admin_checksums/staff_restrictions2_cgi
Checksum=$(sha256sum /var/www/cgi-bin_karoshi/admin/staff_restrictions2.cgi | cut -d' ' -f1)
[ -z "$Checksum" ] && Checksum=not_set
if [ "$Checksum"'check' != "$staff_restrictions2_cgi"'check' ]
then
	echo "$(date): staff_restrictions- Incorrect Checksum" >> "/opt/karoshi/logs/karoshi_web_management/$LOG_DATE"
	exit 101
fi

########################
#Get variables
########################
numArgs=$#
if [ "$numArgs" != 1 ]
then
	echo "$(date): staff_restrictions - incorrect number of arguments" >> "/opt/karoshi/logs/karoshi_web_management/$LOG_DATE"
	exit 101
fi
REMOTE_USER=$(echo "$*" | tr -cd 'A-Za-z0-9\._:\-' | cut -s -d: -f1)
REMOTE_ADDR=$(echo "$*" | tr -cd 'A-Za-z0-9\._:\-' | cut -s -d: -f2)
RemoteCheckSum=$(echo "$*" | tr -cd 'A-Za-z0-9\._:\-' | cut -s -d: -f3)
DELETE=$(echo "$*" | tr -cd 'A-Za-z0-9\._:\-' | cut -s -d: -f4)
STAFFNAME=$(echo "$*" | tr -cd 'A-Za-z0-9\._:\-' | cut -s -d: -f5)

########################
#Check data
########################
if [ "$RemoteCheckSum"'check' != "$Checksum"'check' ]
then
	echo "$(date): staff_restrictions - Not called by locations.cgi" >> "/opt/karoshi/logs/karoshi_web_management/$LOG_DATE"
	exit 101
fi
if [ -z "$REMOTE_USER" ]
then
	echo "$(date): staff_restrictions - Blank remote user" >> "/opt/karoshi/logs/karoshi_web_management/$LOG_DATE"
	exit 101
fi
if [ -z "$REMOTE_ADDR" ]
then
	echo "$(date): staff_restrictions - Blank remote tcpip address" >> "/opt/karoshi/logs/karoshi_web_management/$LOG_DATE"
	exit 101
fi
if [ -z "$DELETE" ] && [ -z "$STAFFNAME" ]
then
	echo "$(date): staff_restrictions - No Action by $REMOTE_USER from $REMOTE_ADDR" >> "/opt/karoshi/logs/karoshi_web_management/$LOG_DATE"
	exit
fi
if [[ $(grep -c ^"$REMOTE_USER": /opt/karoshi/web_controls/web_access_admin) != 1 ]]
then
	echo "$(date): staff_restrictions - access denied to $REMOTE_USER from $REMOTE_ADDR" >> "/opt/karoshi/logs/karoshi_web_management/$LOG_DATE"
	exit 101
fi

touch /opt/karoshi/web_controls/staff_restrictions.txt
chmod 0640 /opt/karoshi/web_controls/staff_restrictions.txt
chown root.apache_karoshi /opt/karoshi/web_controls/staff_restrictions.txt

#Add staff user to the restriction list
if [ ! -z "$STAFFNAME" ]
then
	STAFFCHECK=$(grep -c -w "$STAFFNAME" /opt/karoshi/web_controls/staff_restrictions.txt)
	if [ "$STAFFCHECK" = 0 ]
	then
		#Modify restrictions.txt
		echo "$STAFFNAME" >> /opt/karoshi/web_controls/staff_restrictions.txt
	fi
fi

#Remove staff user from the restriction list
if [ ! -z "$DELETE" ]
then
	sed 's/'"$DELETE"'//g' /opt/karoshi/web_controls/staff_restrictions.txt > /opt/karoshi/web_controls/staff_restrictions.txt1
	sed '/^$/d' /opt/karoshi/web_controls/staff_restrictions.txt1 > /opt/karoshi/web_controls/staff_restrictions.txt
	rm -f /opt/karoshi/web_controls/staff_restrictions.txt1
fi

#Sort restriction file
sort /opt/karoshi/web_controls/staff_restrictions.txt > /opt/karoshi/web_controls/staff_restrictions.tmp
mv -f /opt/karoshi/web_controls/staff_restrictions.tmp /opt/karoshi/web_controls/staff_restrictions.txt
exit
